/*
 * pAlbum 內部的文本頁和圖片頁
 */

$lightGray = #cacaca

.palbum-wrapper .page.content
  position: relative

  .wrapper
    overflow: hidden
    margin: $baseMargin
    width: $pageWidth - $baseMargin * 2
    height: $pageHeight - $baseMargin * 2

  // 圖片頁
  // 播放器樣式單獨放在 palbum.player.styl 中
  &.image
    .wrapper
      position: relative

    .cover
      position: relative
      margin: 50px auto 20px auto
      width: 300px
      height: 300px

      a,img
        display: inline-block
        width: 100%
        height: 100%
        border-radius: 100%

      .loading
        position: absolute
        display: inline-block
        left: 0
        top: 0
        width: 100%
        height: 100%
        border-radius: 100%

        background: url('/icons/loading_circle.gif') 0 0 no-repeat
        background-size: 100%
        background-color: rgba(0, 0, 0, .7)


  // 文本頁
  &.text
    .header
      margin: 0 0 20px 0
      .song-name
        margin: 0
        color: $baseGreen
        font-size: 22px
        line-height: 40px
        height: 40px

      .artist-name
        display: inline-block
        font-style: italic
        line-height: 20px
        height: 20px

      .album-name
        display: none

    .main-body
      overflow: auto
      margin-bottom: 15px
      height: $pageHeight - $baseMargin * 2 - 40px - 20px - 20px - 15px
      font-size: 18px
      font-family: $contentFontFamily;
      line-height: 1.4em

      p
        margin: 20px 0

        &:first-child
          margin-top: 0

        &:last-child
          margin-bottom: 0

      a.search-more
        display: inline-block
        margin: 30px 0 20px 0
        color: $baseWhite
        font-size: 16px
        font-family: $baseFontFamily
        text-decoration: none
        opacity: 0.7

        &:hover
          color: $baseGreen
          text-decoration: underline
          opacity: 1

    .footer
      position: absolute
      left: 0
      bottom: 0
      width: 100%
      height: $baseMargin + 15
      line-height: $baseMargin + 15

      .menu
        display: inline-block
        padding: 0 10px
        margin-left: $baseMargin - 10
        opacity: 0.7

        &:hover
          cursor: pointer
          color: $baseGreen
          opacity: 1

        .icon
          font-size: 0.8em
          &:before
            content: '\e9ba'

      .page-number
        position: absolute
        right: 0
        width: $baseMargin
        text-align: left
        opacity: 0.7

        font-size: 20px
        font-family: cursive
        font-style: italic
