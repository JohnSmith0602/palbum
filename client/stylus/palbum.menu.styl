.main-content .menu-modal
  display: none
  position: absolute
  z-index: 1000
  left: 50%
  top: 50%
  margin-left: ($palbumSidebarWidth / 2) - $baseMargin - $pageWidth
  margin-top: - $baseMargin - ($pageHeight / 2)
  width: $pageWidth * 2 + $baseMargin * 2
  height: $pageHeight + $baseMargin * 2

  &.theme-blue
    background-color: $themeBlue


  .page
    float: left
    width: 50%
    height: 100%

    &.left .cover
      margin: $baseMargin
      width: $pageWidth + $baseMargin - $baseMargin * 2
      height: $pageHeight
      background-repeat: no-repeat
      background-position: center 0
      background-size: auto 100%
      border-radius: 30px

    &.right .wrapper
      overflow: hidden
      margin: $baseMargin
      width: $pageWidth + $baseMargin - $baseMargin * 2
      height: $pageHeight

      h2
        margin: 0 0 20px 0
        font-size: 22px
        line-height: 40px
        height: 40px
        text-align: center

      .sections
        overflow: auto
        height: $pageHeight - (40 + 20)

      .section
        margin: 0 0 10px $baseMargin

        .title
          margin: 0
          font-size: 18px
          line-height: 36px
          height: 36px

        ul
          list-style-type: circle
          margin: 0

          li
            line-height: 1.4em
            &.current
              list-style-type: disc
              color: $baseGreen
